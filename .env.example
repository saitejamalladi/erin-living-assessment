# Database Configuration
# MongoDB connection string
MONGO_URI=mongodb://root:password@localhost:27017/erin-living?authSource=admin

# Redis Configuration for BullMQ
# Redis host (use 'localhost' for local development, 'redis' for Docker)
REDIS_HOST=localhost
# Redis port
REDIS_PORT=6380
# Redis password (required for BullMQ)
REDIS_PASSWORD=password

# Application Configuration
# Node environment (development/production)
NODE_ENV=production
# Application port
PORT=3000

# Notification Configuration
# Webhook URL for sending notifications (replace with your actual endpoint)
REQUEST_BIN_URL=https://webhook.site/your-unique-id